%h1 Edilnews #{session[:mate]}
%table#articles
 %thead
  %tr
   %th Article title
   %th Release Date
   %th Text
   %th Author
   %th More Info
 %tbody
  - @all.each do |article|
   %tr
    %td=article.title
    %td=article&.release_date&.strftime("%B %d %Y")
    %td=article.text
    %td=article.author
    %td=link_to "Details", article_path(article)
%br
%h4 Search by Title
= form_tag search_path, :method => :get do
 = text_field_tag(:search, params[:search], placeholder: "Type", class: "form-control")
 = submit_tag 'Cerca articolo', :class => 'btn btn-info glyphicon glyphicon-search' , :title => nil
%br
